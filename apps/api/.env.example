# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Redis Configuration  
REDIS_URL=redis://localhost:6379

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here

# Server Configuration
NODE_ENV=development
PORT=3001
# Comma-separated for multiple origins (e.g. http://localhost:3000,http://localhost:3002)
FRONTEND_URL=http://localhost:3000

# YouTube Data API v3 - for generating personalized course videos from roadmaps (MIT, Stanford, etc.)
# Create key at https://console.cloud.google.com/apis/credentials
# When empty: topic discovery uses Piped then Invidious (free, no key).
YOUTUBE_API_KEY=

# Ollama Configuration - AI model for skill assessment and question generation
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:0.5b
