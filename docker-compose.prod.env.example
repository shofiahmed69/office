# Production Environment Variables for Docker Compose

# Database
POSTGRES_USER=scholarpass_user
POSTGRES_PASSWORD=change-this-secure-password

# JWT Secrets
JWT_SECRET=change-this-to-a-secure-random-string-at-least-32-characters
JWT_REFRESH_SECRET=change-this-to-another-secure-random-string-at-least-32-characters

# API Configuration
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# Frontend
NEXT_PUBLIC_API_URL=https://api.scholarpass.com
NEXT_PUBLIC_APP_NAME=ScholarPass
